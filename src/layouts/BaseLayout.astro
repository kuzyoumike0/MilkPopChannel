---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// ✅ グローバルCSSは Astro にバンドルさせる（GitHub Pages の base パスでも確実）
import "../styles/site.css";

// ✅ props が無くても必ずデフォルトが入る（= buildで落ちない）
const props = Astro.props ?? {};
const title = typeof props.title === "string" && props.title.trim()
  ? props.title
  : "MilkPop";

const description = typeof props.description === "string" && props.description.trim()
  ? props.description
  : "MilkPop Official Website";

// ✅ base パス（/ または /repo/）
const base = import.meta.env.BASE_URL;

// ✅ OG画像URLを安全に生成
const ogImage =
  Astro.site
    ? new URL(`.${base}img/og.jpg`, Astro.site).toString()
    : `${base}img/og.jpg`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- CSS は上の import でバンドル済み -->

    <!-- OGP -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
  </head>

  <body>
    <div class="pastel-bg"></div>

    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
