  // 例）URLが https://www.youtube.com/watch?v=ABCDEFGHIJK の場合 → id: "ABCDEFGHIJK"
  // dur は「再生時間バッジ（手動）」です（APIなし簡易）
  {
    id: "dQw4w9WgXcQ",
    title: "最新MV：歌ってみた 01（仮）",
    note: "歌ってみた",
    dur: "3:24",
  },
  {
    id: "3JZ_D3ELwOQ",
    title: "最新MV：オリジナル 01（仮）",
    note: "オリジナル",
    dur: "4:10",
  },
  {
    id: "kxopViU98Xo",
    title: "最新MV 01 — タイトル（仮）",
    note: "MV",
    dur: "3:05",
  },
  {
    id: "9bZkp7q19f0",
    title: "最新MV：歌ってみた 02（仮）",
    note: "歌ってみた",
    dur: "3:12",
  },
  {
    id: "fJ9rUzIMcZQ",
    title: "最新MV：オリジナル 02（仮）",
    note: "オリジナル",
    dur: "3:48",
  },
  {
    id: "tAGnKpE4NCI",
