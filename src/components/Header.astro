---
// ✅ GitHub Pages の base（/repo/）でもリンクが壊れないようにする
const base = import.meta.env.BASE_URL;
const navItems = [
  { label: "Home", href: base },
  { label: "people", href: `${base}people` },
  { label: "Works", href: `${base}works` },
  { label: "About", href: `${base}about` },
];
---

<header class="siteHeader">
  <div class="headerInner">
    <!-- ===== Logo / Title ===== -->
    <div class="logoArea">
      <a href={base} class="logoLink">
        <span class="logoMain">MilkPop</span>
        <span class="logoSub">— Channel —</span>
      </a>
    </div>

    <!-- ===== Navigation ===== -->
    <nav class="navArea">
      <ul class="navList">
        {navItems.map((item) => (
          <li class="navItem">
            <a href={item.href} class="navLink">
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  /* ===== Header Base ===== */
  .siteHeader{
    position: sticky;
    top: 0;
    z-index: 1000;
    background: linear-gradient(
      180deg,
      rgba(7,7,9,.92),
      rgba(7,7,9,.72)
    );
    backdrop-filter: blur(6px);
    border-bottom: 1px solid rgba(255,255,255,.12);
  }

  .headerInner{
    width: min(1200px, calc(100% - 40px));
    margin: 0 auto;
    padding: 14px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  /* ===== Logo ===== */
  .logoArea{
    display: flex;
    align-items: baseline;
  }

  .logoLink{
    display: inline-flex;
    gap: 8px;
    align-items: baseline;
    text-decoration: none;
  }

  .logoMain{
    font-weight: 900;
    letter-spacing: .12em;
    font-size: 18px;
    color: #e9e9ef;
  }

  .logoSub{
    font-size: 11px;
    letter-spacing: .18em;
    color: rgba(233,233,239,.6);
  }

  /* ===== Navigation ===== */
  .navArea{
    display: flex;
    align-items: center;
  }

  .navList{
    list-style: none;
    display: flex;
    gap: 18px;
    padding: 0;
    margin: 0;
  }

  .navItem{
    position: relative;
  }

  .navLink{
    font-size: 12px;
    letter-spacing: .12em;
    color: rgba(233,233,239,.72);
    text-decoration: none;
    padding: 6px 2px;
    transition: color .2s ease;
  }

  .navLink:hover{
    color: #f3d08a;
  }

  /* ===== Active hint (URL一致時) ===== */
  /* base付きURLは aria-current でハイライトされるので、ここは保険程度 */
  .navLink:global(a[aria-current="page"]){
    color: #f3d08a;
    font-weight: 900;
  }

  /* ===== Responsive ===== */
  @media (max-width: 640px){
    .headerInner{
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }

    .navList{
      gap: 14px;
    }
  }
</style>
