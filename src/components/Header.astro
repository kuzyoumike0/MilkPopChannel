---
const nav = [
  ["Top", "/"],
  ["About", "/about"],
  ["Members", "/members"],
  ["Discography", "/discography"],
  ["Video", "/video"],
  ["Live / Schedule", "/live"],
  ["News", "/news"],
  ["Contact", "/contact"]
];
---
<header class="container" style="padding:18px 0;">
  <div class="card" style="padding:14px 16px; display:flex; align-items:center; justify-content:space-between; gap:12px;">
    <a href={Astro.base} style="display:flex; align-items:center; gap:10px; font-weight:900;">
      <span class="pill pink">MilkPop</span>
      <span class="small">Official</span>
    </a>

    <nav style="display:none; gap:14px; flex-wrap:wrap;" class="nav">
      {nav.map(([label, href]) => (
        <a href={`${Astro.base.replace(/\/$/, "")}${href}`} class="small" style="font-weight:800; padding:6px 8px; border-radius:10px;">
          {label}
        </a>
      ))}
    </nav>

    <a class="btn" href={`${Astro.base}contact`} style="padding:10px 14px;">Contact</a>
  </div>

  <style>
    @media (min-width: 900px){
      .nav{ display:flex !important; }
    }
  </style>
</header>
